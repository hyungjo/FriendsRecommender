extends ../layout/jumbotron

append body
  .container
    h1 Register Page
    p.lead Say something worthwhile here.
    br
    form(role='form', action="/authentication/register",method="post", style='max-width: 300px;')
      .form-group
          input.form-control(type='text', name="username", placeholder='Enter Username')
      .form-group
        input.form-control(type='password', name="password", placeholder='Password')
      .form-group
        input.form-control(type='text', name="email", placeholder='E-mail')
      .form-group
        input.form-control(type='text', name="gender", placeholder='Gender')
      .form-group
        input.form-control(type='text', name="address", placeholder='Address')
      button.btn.btn-default(type='submit') Submit
      a(href='/')
        button.btn.btn-primary(type="button") Cancel
