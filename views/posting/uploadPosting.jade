extends ../layout/jumbotron

append body
  .jumbotron
    .container
      p
        form(role='form', action="/posting/upload", method="post", enctype="multipart/form-data", style='max-width: 300px;')
          filedset.form-group
            label(for='comment') Title:
            input.form-control(type='text', name="title", placeholder='Enter Title')
          filedset.form-group
            label(for='description') Description:
            textarea#comment.form-control(rows='5', name="description", placeholder='Enter description')
          filedset.form-group
            label(for='file') Image:
            input.form-control(type='file', name="img")
          button.btn.btn-primary(type='submit') Submit
          filedset.form-group
            a(href='/')
              button.btn.btn-default(type="button") Cancel
